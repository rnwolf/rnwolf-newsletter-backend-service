PROJECT_DIR=path to your project directory
ENVIRONMENT=local or staging or production

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_API_TOKEN=your_api_token_here

# Secrets (set via wrangler secret put)
TURNSTILE_SITE_KEY=your_turnstile_site_key
TURNSTILE_SECRET_KEY=your_turnstile_secret_key
HMAC_SECRET_KEY=your_hmac_secret_key_for_unsubscribe_tokens

# D1 Database Configuration
D1_DATABASE_ID=your_database_id

# Newsletter Script Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=your_email@gmail.com
FROM_NAME="Your Newsletter Name"
EMAILS_PER_MINUTE=10

# Mailchannel Configuration
MAILCHANNEL_API_KEY=your_mailchannel_api_key
MAILCHANNEL_AUTH_ID=your_mailchannel_auth_id
SENDER_EMAIL=your_newsletter_sender_email
SENDER_NAME="Newsletter Sender Name"
# Mailchannel pre-prod test recipient
RECIPIENT_EMAIL=your_test_recipient_email

# Keep the actual keys secure - use different env vars
GRAFANA_ORGANIZATION=your_organization_name_here
GRAFANA_API_SERVICE_ACCOUNT=glsa_your_token_here
GRAFANA_API_KEY=glsa_your_token_here

# Performance Testing
PERFORMANCE_TEST_DURATION=30000
PERFORMANCE_CONCURRENT_USERS=10
PERFORMANCE_REQUESTS_PER_USER=20